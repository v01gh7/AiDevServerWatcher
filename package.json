{
  "name": "zombie-dev-watcher",
  "version": "1.0.1",
  "description": "Cross-platform CLI utility to kill zombie dev-server processes (Windows, macOS, Linux)",
  "main": "dist/index.js",
  "bin": {
    "zombie-watcher": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build src/index.ts --compile --outfile zombie-watcher.exe",
    "build:js": "bun build src/index.ts --target bun --outfile dist/index.js",
    "prepublishOnly": "bun run build:js"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "csv-parse": "^6.1.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "bun-types": "^1.3.9"
  }
}